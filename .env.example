# =================================================================
# Discord Assistant Bot - Environment Configuration
# =================================================================
# Copy this file to .env and fill in your actual values

# =================================================================
# REQUIRED - Bot Configuration  
# =================================================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_discord_client_id_here
GUILD_ID=your_discord_guild_id_here

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =================================================================
# Environment & Basic Settings
# =================================================================
NODE_ENV=development
BOT_PREFIX=!
OWNER_ID=your_discord_user_id_here

# =================================================================
# Logging Configuration
# =================================================================
LOG_LEVEL=info
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true
LOG_MAX_FILE_SIZE=5242880
LOG_MAX_FILES=5

# =================================================================
# Database Configuration (Optional)
# =================================================================
DATABASE_URL=mongodb://localhost:27017/discord_bot
DATABASE_TYPE=mongodb
DATABASE_NAME=discord_bot
DATABASE_HOST=localhost
DATABASE_PORT=27017
DATABASE_USERNAME=
DATABASE_PASSWORD=

# =================================================================
# API Keys - External Services
# =================================================================

# Weather API (WeatherAPI.com)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://api.weatherapi.com/v1
WEATHER_API_TIMEOUT=5000

# OpenAI API (for AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150

# News API (NewsAPI.org)
NEWS_API_KEY=your_news_api_key_here
NEWS_API_URL=https://newsapi.org/v2

# Cryptocurrency API (CoinGecko - no key required)
CRYPTO_API_URL=https://api.coingecko.com/api/v3

# =================================================================
# Feature Flags - Enable/Disable Features
# =================================================================
ENABLE_WEATHER=true
ENABLE_TELEGRAM=true
ENABLE_MUSIC=false
ENABLE_MODERATION=false
ENABLE_AI=false
ENABLE_ANALYTICS=false
ENABLE_DASHBOARD=false

# =================================================================
# Command Configuration
# =================================================================
USE_GLOBAL_COMMANDS=false
COMMAND_COOLDOWN=3000
MAX_COMMANDS_PER_MINUTE=20
DELETE_INVALID_COMMANDS=false

# =================================================================
# Server Configuration (for web dashboard)
# =================================================================
PORT=3000
HOST=localhost
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100
ENABLE_CORS=true

# =================================================================
# Cache Configuration
# =================================================================
ENABLE_CACHE=true
CACHE_TYPE=memory
CACHE_TTL=300000
REDIS_URL=redis://localhost:6379

# =================================================================
# Security Configuration
# =================================================================
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
ENABLE_RATE_LIMIT=true
ENABLE_INPUT_VALIDATION=true

# =================================================================
# Development Configuration
# =================================================================
HOT_RELOAD=false
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PROFILER=false
